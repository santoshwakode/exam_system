<p id="notice"><%= notice %></p>

<h1>Listing Test Details</h1>

<table border="1">
  <thead>
    <tr>
      <th>Test Name</th>
      <th>Student</th>
      <th>Question</th>
      <th>Answer</th>
      <th>Score</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @test_details.each do |test_detail| %>
      <tr>
        <td><%= test_detail.test.exam.name %></td>
        <td><%= test_detail.student.name %></td>
        <td><%= test_detail.question_detail.question %></td>
        <td><%= test_detail.answer %></td>
        <td><%= test_detail.score %></td>
        <td><%= test_detail.status %></td>
        <td><%= link_to 'Edit', edit_test_detail_path(test_detail) %></td>
      </tr>
    <% end %>
  </tbody>
</table>